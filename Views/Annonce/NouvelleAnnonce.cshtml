@model S5_RH.Models.back.Annonce.NouvelleAnnonce
@{
    List<Service> services = (List<Service>)ViewData["services"];
}

<div class="container">
    @using (Html.BeginForm("NouvelleAnnonce", "Annonce", FormMethod.Post, new { enctype = "multipart/form-data"}))
    {
        <div class="row" style="padding-top: 5%; padding-bottom: 5%;">
            <h1>Nouvelle Annonce</h1>
            <div class="col-6">
                <div class="form-floating mb-3 champs">
                    <select class="form-select rounded-0" id="Poste" name="IdServices">
                        @foreach (var serv in services)
                        {
                            <option value="@serv.IdService">@serv.Nom</option>
                        }
                    </select>
                    <label for="Poste">Poste</label>
                    <span class="Error">@Html.ValidationMessageFor(annonce => annonce.Services)</span>
                </div>
                <div class="form-floating mb-3 champs">
                    <input type="datetime-local" class="form-control rounded-0"  id="dateDebut" name="Debut"
                           
                     />
                    <label for="dateDebut">DÃ©but</label>
                    <span class="Error">@Html.ValidationMessageFor(annonce => annonce.Debut)</span>
                </div>
                <div class="form-floating mb-3 champs">
                    <input type="datetime-local" class="form-control rounded-0"  id="dateFin" name="Fin"
                        />
                    <label for="dateFin">Fin</label>
                    <span class="Error">@Html.ValidationMessageFor(annonce => annonce.Fin)</span>
                </div>
                <div class="form-floating mb-3 champs">
                    <textarea class="form-control rounded-0" id="description"  style="height: 190px;" name="Description"></textarea>
                    <label for="description">Description</label>
                    <span class="Error">@Html.ValidationMessageFor(annonce => annonce.Description)</span>
                </div>
            </div>
            <div class="col-6">

                <div class="form-floating mb-3 champs">
                    <input type="number" class="form-control rounded-0" id="Chargedetravail"  placeholder="Heure total" name="ChargeDeTravail"
                           />
                    <label for="Chargedetravail">Charge de travail</label>
                    <span class="Error">@Html.ValidationMessageFor(annonce => annonce.ChargeDeTravail)</span>
                </div>
                <div class="form-floating mb-3 champs">
                    <input type="number" class="form-control rounded-0" id="jourHomme" name="JourHomme"
                    />
                    <label for="jourHomme">Jour/Homme</label>
                    <span class="Error">@Html.ValidationMessageFor(annonce => annonce.JourHomme)</span>
                </div>
              
                
                <button type="submit" class="btn btn-primary form-control rounded-0 mt-5">Suivant</button>
                <button type="reset" class="btn btn-outline-primary form-control rounded-0 mt-5">Reset</button>
                
            </div>
        </div>
    }
</div>
<style>
    .champs
    {
        margin-top: 2%;
    }
    .Error{
        color:  red;
    }
</style>